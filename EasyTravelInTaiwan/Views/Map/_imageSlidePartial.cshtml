@model IEnumerable<EasyTravelInTaiwan.Models.placeimage>
<script src="~/scripts/bootstrap-carousel.js"></script>

<div id="myCarousel" class="carousel slide">
    <ol class="carousel-indicators">
        @if (Model.Count() > 0)
        {
            for (var i = 0; i < Model.Count(); i++)
            {
                if (i == 0)
                {
                    <li data-target="#myCarousel" data-slide-to="@i" class="active"></li>
                }
                else
                {
                    <li data-target="#myCarousel" data-slide-to ="@i"></li>
                }
            }
        }
    </ol>
    <div class="carousel-inner">
        @if (Model.Count() > 0)
        {
            foreach (var image in Model)
            {
            <div class="item">
                <img src="@Url.Action("RenderBookImage", new { id = image.sid })">
                <div class="carousel-caption">
                    <h4>@image.Name</h4>
                </div>
            </div>
            }
        }
    </div>
    <a class="carousel-control left" href="#myCarousel" data-slide="next">&lsaquo;</a>
    <a class="carousel-control right" href="#myCarousel" data-slide="prev">&rsaquo;</a>
</div>

<script type="text/javascript">
    $('.carousel').carousel();
</script>

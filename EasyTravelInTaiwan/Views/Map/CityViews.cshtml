@model IEnumerable<EasyTravelInTaiwan.Models.view>

@{
    ViewBag.Title = ViewBag.ListTitle + "- Easy Travel In Taiwan";
    Layout = "~/Views/shared/_BootstrapLayout.basic.cshtml";
}

<h2>@ViewBag.ListTitle</h2>
<table>
    @foreach (EasyTravelInTaiwan.Models.viewtype type in ViewBag.TypeList)
    {
        <tr>
            <td><br /></td>
        </tr>
        <tr>
            <td>@type.Typename</td>
        </tr>
        <tr>
            @{
                int i = 0;
            }
            @foreach (EasyTravelInTaiwan.Models.view place in Model)
            {
                if (place.Viewtype == type.Typenumber)
                {
                    i++;
                    <td class="span4">
                        @Html.ActionLink(place.Name, "ViewPointDetails", new { id = place.Id })
                    </td>
                    if (i % 3 == 0)
                    {
                        @Html.Raw("</tr><tr>")
                    }
                }

            }
        </tr>
    }
</table>


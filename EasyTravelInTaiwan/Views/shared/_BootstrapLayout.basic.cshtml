                                        @*<li><a href="~/Rating/Index"><i class="icon-list-alt"></i> 評分列表</a></li>*@
                                    </ul>
                                </div>
                                <button id="LogoutBtn" class="btn btn-primary" type="button" onclick="Logout()">登出</button>
                            }

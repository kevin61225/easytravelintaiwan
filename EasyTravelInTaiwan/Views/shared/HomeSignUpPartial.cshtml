@model EasyTravelInTaiwan.Models.RegisterModel
@using BootstrapSupport

<link href="~/Content/datepicker.css" rel="stylesheet" />
@using (Html.BeginForm("Register", "Member"))
{
     @Html.AntiForgeryToken()
    <fieldset>
        <legend>註冊帳號</legend>
        <div class="editor-label">
            @Html.Label("帳號")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Account)
            @Html.ValidationMessageFor(model => model.Account)
        </div>
        <br />
        <div class="editor-label">
            @Html.Label("密碼")
        </div>
        <div class="editor-field">
            @Html.PasswordFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password)
        </div>
        <br />
        <div class="editor-label">
            @Html.Label("請再輸入一次密碼")
        </div>
        <div class="editor-field">
            @Html.PasswordFor(model => model.ConfirmPassword)
            @Html.ValidationMessageFor(model => model.ConfirmPassword)
        </div>
        <br />
        <div class="editor-label">
            @Html.Label("姓名")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <br />
        <div class="editor-label">
            @Html.Label("電子郵件信箱")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <br />
        <div class="editor-label">
            @Html.Label("電話號碼")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PhoneNumber)
            @Html.ValidationMessageFor(model => model.PhoneNumber)
        </div>
        <br />
        <div class="editor-field">
        <label class="radio inline">
            @Html.RadioButtonFor(model => model.Sex, "Male")
            男
        </label>
        <label class="radio inline">
            @Html.RadioButtonFor(model => model.Sex, "Female")
            女
        </label>
        @Html.ValidationMessageFor(model => model.Sex)
    </div>
        <br />
        <div class="editor-label">
            @Html.Label("地址")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UserAddress)
            @Html.ValidationMessageFor(model => model.UserAddress)
        </div>
        <br />
        <div class="editor-label">
            @Html.Label("出生年月日")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Birthday)
            @Html.ValidationMessageFor(model => model.Birthday)
        </div>
        <br/>
        <br />
        <p>
            <input type="submit" value="送交" class="btn btn-primary" />
        </p>
    </fieldset>
}
@section Scripts {
    <script type="text/javascript">
        $('.datepicker').datepicker(); //Initialise any date pickers
    </script>
}
@model IEnumerable<EasyTravelInTaiwan.Models.member>

@{
    ViewBag.Title = "帳號管理";
}

<style>
    .table tbody tr:hover td, .table tbody tr:hover th {
        background-color: #b6ff00;
    }
</style>

<h2>會員資料</h2>
<p>
    @Html.ActionLink("新增會員", "Create", null, new {@class = "btn btn-primary "})
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Account)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerType)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Account)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @{
                if(item.Role == 0)  {@Html.Label("管理者");}
                if(item.Role == 1)  {@Html.Label("店員");}
                if (item.Role == 2) {@Html.Label("會員");}                                                    
            }
        </td>
        <td>
            @{
                if(item.CustomerType == 0)  {@Html.Label("VIP");}
                if(item.CustomerType == 1)  {@Html.Label("一般會員");}
                if (item.CustomerType == 2) {@Html.Label("FB會員");}
                if (item.CustomerType == 3) { @Html.Label("管理員身分"); }
                if (item.CustomerType == 4) { @Html.Label("一般會員(FB帳號)"); }                                                  
            }
        </td>
        <td>
            <div class="btn-group">
                    <a class="btn dropdown-toggle btn btn-info" data-toggle="dropdown" href="#">
                        Action
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">                
                        <li>@Html.ActionLink("編輯", "Edit", new { id = item.UserID }) </li>
                        <li>@Html.ActionLink("詳細資料", "Details", new { id=item.UserID  }) </li>
                        <li class="divider"></li>
                        <li>@Html.ActionLink("刪除", "Delete", new { id=item.UserID  })</li>
                        
                    </ul>
                </div>
        </td>
    </tr>
}

</table>

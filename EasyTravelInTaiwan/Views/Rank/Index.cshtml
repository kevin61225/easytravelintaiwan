@{
    ViewBag.Title = "排行榜 - Easy Travel In Taiwan";
}

<div class="row">
    <div class="span8">
        <ul id="rankSpotTab" class="nav nav-tabs">
            <li class="active"><a href="#ViewTab" data-toggle="tab">景點排行</a></li>
            <li><a href="#FoodTab2" data-toggle="tab">美食排行</a></li>
            <li><a href="#HotelTab3" data-toggle="tab">旅館排行</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="ViewTab">
                <div id="ViewRankFilter">
                    @Html.Action("RankFilter", "Rank")
                </div>
                <br />
                @Html.Action("ViewRankPartial")
            </div>
            <div class="tab-pane" id="FoodTab2">
                <div id="FoodRankFilter">
                    @Html.Action("RankFilter", "Rank")
                </div>
                <br />
                @Html.Action("FoodRankPartial")
            </div>
            <div class="tab-pane" id="HotelTab3">
                <div id="HotelRankFilter">
                    @Html.Action("RankFilter", "Rank")
                </div>
                <br />
                @Html.Action("HotelRankPartial")
            </div>
        </div>
    </div>
</div>


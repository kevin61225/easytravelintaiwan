@{
    ViewBag.Title = "排行榜 - Easy Travel In Taiwan";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>

<div class="row">
    <div class="span8">
        <ul id="RankSpotTab" class="nav nav-tabs">
            <li class="active"><a href="#ViewRankTab" data-toggle="tab">景點排行</a></li>
            <li><a href="#FoodRankTab" data-toggle="tab">美食排行</a></li>
            <li><a href="#HotelRankTab" data-toggle="tab">旅館排行</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="ViewRankTab">
                <div id="ViewRankFilter">
                    @Html.Action("RankFilter", "Rank", new { type = "view" })
                </div>
                <br />
                <div id="ViewRankPartial">
                    @Html.Action("ViewRankPartial", "Rank", new { type = "1" })
                </div>
            </div>
            <div class="tab-pane" id="FoodRankTab">
                <div id="FoodRankFilter">
                    @Html.Action("RankFilter", "Rank", new { type = "food" })
                </div>
                <br />
                <div id="FoodRankPartial">
                    @Html.Action("FoodRankPartial", "Rank", new { type = "3" })
                </div>
            </div>
            <div class="tab-pane" id="HotelRankTab">
                <div id="HotelRankFilter">
                    @Html.Action("RankFilter", "Rank", new { type = "hotel" })
                </div>
                <br />
                <div id="HotelRankPartial">
                    @Html.Action("HotelRankPartial", "Rank", new { type = "16" })
                </div>
            </div>
        </div>
    </div>
</div>



@{
    ViewBag.Title = "Easy Travel In Taiwan";
}
@*<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>*@
<link href="~/Content/units/index.css" rel="stylesheet" />


@Html.Action("SearchDropdownList", "Search")

<div class="row">
    <div class="span8">
        <div class="well">
            <h4>公告</h4>
            <p>＊新增瀏覽紀錄，在旅遊規畫內使用。Cookie 存活時間設定為 7 天</p>
            <p>＊旅遊規劃已經可以使用</p>
            <p>＊修正無圖片的地點，無圖片的話會顯示無圖片</p>
            <p>＊有問題歡迎提出～</p>
        </div>
        <ul id="hotSpotTab" class="nav nav-tabs">
            <li class="active"><a href="#ViewTab" data-toggle="tab">熱門景點</a></li>
            <li><a href="#FoodTab2" data-toggle="tab">熱門美食</a></li>
            <li><a href="#HotelTab3" data-toggle="tab">熱門旅館</a></li>
        </ul>
        <div class="tab-content box">
            <div class="tab-pane active" id="ViewTab">
                @*@Html.Action("HotViewPartial")*@
                @{Html.RenderAction("HotViewPartial");}
            </div>
            <div class="tab-pane " id="FoodTab2">
                @*@Html.Action("HotFoodPartial")*@
                @{Html.RenderAction("HotFoodPartial");}
            </div>
            <div class="tab-pane " id="HotelTab3">
                @*@Html.Action("HotHotelPartial")*@
                @{Html.RenderAction("HotHotelPartial");}
            </div>
        </div>
    </div>
    <div class="span2">
        <div>
            @*<div id="fb-root"></div>*@
            <div class="fb-like-box" data-href="https://www.facebook.com/EasyTravelInTaiwan" data-width="292" data-show-faces="true" data-header="true" data-stream="true" data-show-border="true"></div>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        $('#hotSpotTab a').hover(function (e) {
            e.preventDefault();
            $(this).tab('show');
        });
    </script>
}
